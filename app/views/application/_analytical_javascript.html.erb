<script type="text/javascript">
var Analytical = {
  track: function(page) {
<%= raw analytical.now.track('__PAGE__').gsub(/"__PAGE__"/,'page') %>
  },
  event: function(name, data) {
    if (typeof data === 'undefined') { data = {}; }
<%= raw analytical.now.event('__EVENT__', {}).gsub(/"__EVENT__"/,'name').gsub(/"?\{\}"?/,'data') %>
  },
  set: function(data) {
<%= raw analytical.now.set('__DATA__').gsub(/"__DATA__"/,'data') %>
  },
  identify: function(email, id) {
<%= raw analytical.now.identify('__EMAIL__', '__ID__').gsub(/"__ID__"/,'id').gsub(/"__EMAIL__"/,'email') %>
  }
};
</script>
